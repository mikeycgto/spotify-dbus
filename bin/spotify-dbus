#!/usr/bin/env ruby
require 'spotify-dbus'

def die msg
  puts msg
  exit false
end

if ARGV.size > 0
  begin
    cmd = ARGV.pop
    
    if Spotify.player.methods[cmd]
      Spotify.player.send(cmd)
      
    else
      die "Invalid command!"
      
    end
  rescue
    die "Spotify is not running!"    
  end
  
else
  die "No command given!"  
end

